@model blog.core.ViewModels.UserListViewModel
@{

    ViewData["Title"] = "Users";
    ViewBag.ActivePage = "Users";
    var roleId = Context.Session.GetInt32("RoleId");
}
<div class="container">
    <div class="row mb-2">
        <div class="col-12 d-flex justify-content-end">
            <a href="/Account/Create" class="btn btn-sm btn-outline-primary">Create New</a>
        </div>
    </div>
    <table class="table table-striped small">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Data)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.RoleName</td>
                    <td class="text-right">
                        <button class="btn btn-sm btn-danger" onclick="DeleteUser(@user.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script>
        DeleteUser = function(id){
            $.ajax({
                url: '/Account/DeleteUser',
                data: {id: id},
                success: function(res){
                    if(res.success){
                        location.reload();
                    }else{
                        alert(res.message);
                    }
                },
                error:function(err){
                    console.log(err);
                }
            });
        }
    </script>
}